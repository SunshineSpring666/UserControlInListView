<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="thisUC"
             BindingContext="{x:Reference thisUC}"
             x:Class="MaApp.Controls.CardView">

    <StackLayout>
        <Label Text="{Binding CardTitle, Source={x:Reference thisUC}}" FontSize="20" BackgroundColor="Gray" Margin="5"/>
    </StackLayout>
    
</ContentView>